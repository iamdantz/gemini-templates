{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@config": [
        "src/config"
      ],
      "@domain": [
        "src/domain/index"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@commands/*": [
        "src/commands/*"
      ],
      "@validation/*": [
        "src/validation/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}